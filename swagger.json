{
  "swagger": "2.0",
  "info": {
    "title": "Library API",
    "description": "API documentation for the Library project. To access protected routes, you must first log in via GitHub OAuth at /login",
    "version": "1.0.0"
  },
  "host": "cse-project-4c2t.onrender.com",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "securityDefinitions": {
    "cookieAuth": {
      "type": "apiKey",
      "in": "header",
      "name": "Cookie",
      "description": "Session cookie obtained after GitHub OAuth login"
    }
  },
  "paths": {
    "/": {
      "get": {
        "tags": [
          "Hello World"
        ],
        "description": "Returns login status",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/login": {
      "get": {
        "tags": [
          "Authentication"
        ],
        "description": "Redirects to GitHub OAuth login",
        "responses": {
          "302": {
            "description": "Redirect to GitHub"
          }
        }
      }
    },
    "/logout": {
      "get": {
        "tags": [
          "Authentication"
        ],
        "description": "Logs out the current user",
        "responses": {
          "302": {
            "description": "Redirect to home"
          }
        }
      }
    },
    "/books/": {
      "get": {
        "tags": [
          "Books"
        ],
        "description": "Get all books (public access)",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "Books"
        ],
        "description": "Create a new book (requires authentication)",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "example": "The Great Gatsby"
                },
                "author": {
                  "type": "string",
                  "example": "F. Scott Fitzgerald"
                },
                "isbn": {
                  "type": "string",
                  "example": "9780743273565"
                },
                "publishedYear": {
                  "type": "integer",
                  "example": 1925
                },
                "genre": {
                  "type": "string",
                  "example": "fiction"
                },
                "pageCount": {
                  "type": "integer",
                  "example": 180
                },
                "description": {
                  "type": "string",
                  "example": "A classic American novel"
                },
                "rating": {
                  "type": "number",
                  "example": 4.5
                },
                "status": {
                  "type": "string",
                  "example": "available"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Unauthorized - You do not have access to this resource"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/books/{id}": {
      "get": {
        "tags": [
          "Books"
        ],
        "description": "Get a specific book by ID (public access)",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Book ID"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": [
          "Books"
        ],
        "description": "Update a book (requires authentication)",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Book ID"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "example": "The Great Gatsby"
                },
                "author": {
                  "type": "string",
                  "example": "F. Scott Fitzgerald"
                },
                "isbn": {
                  "type": "string",
                  "example": "9780743273565"
                },
                "publishedYear": {
                  "type": "integer",
                  "example": 1925
                },
                "genre": {
                  "type": "string",
                  "example": "fiction"
                },
                "pageCount": {
                  "type": "integer",
                  "example": 180
                },
                "description": {
                  "type": "string",
                  "example": "A classic American novel"
                },
                "rating": {
                  "type": "number",
                  "example": 4.5
                },
                "status": {
                  "type": "string",
                  "example": "available"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "401": {
            "description": "Unauthorized - You do not have access to this resource"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Books"
        ],
        "description": "Delete a book (requires authentication)",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Book ID"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "401": {
            "description": "Unauthorized - You do not have access to this resource"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/authors/": {
      "get": {
        "tags": ["Authors"],
        "description": "Get all authors",
        "produces": ["application/json"],
        "responses": {
          "200": { "description": "OK" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "tags": ["Authors"],
        "description": "Create a new author (requires authentication)",
        "security": [{ "cookieAuth": [] }],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string", "example": "Chinua Achebe" },
                "birthYear": { "type": "number", "example": 1930 },
                "nationality": { "type": "string", "example": "Nigerian" },
                "books": {
                  "type": "array",
                  "items": { "type": "string" },
                  "example": ["Things Fall Apart", "No Longer at Ease"]
                }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },

    "/authors/{id}": {
      "get": {
        "tags": ["Authors"],
        "description": "Get an author by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "tags": ["Authors"],
        "description": "Update an author (requires authentication)",
        "security": [{ "cookieAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string", "example": "Chimamanda Ngozi Adichie" },
                "birthYear": { "type": "number", "example": 1977 },
                "nationality": { "type": "string", "example": "Nigerian" },
                "books": {
                  "type": "array",
                  "items": { "type": "string" },
                  "example": ["Purple Hibiscus", "Half of a Yellow Sun"]
                }
              }
            }
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "tags": ["Authors"],
        "description": "Delete an author (requires authentication)",
        "security": [{ "cookieAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    }
  }
}